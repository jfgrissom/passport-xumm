{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "rootDirs": [
      "lib/"
    ],
    "target": "es5"
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}